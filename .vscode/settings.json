    "workbench.colorCustomizations": {
        "sideBar.background": "#000000",
        "activityBar.background": "#000000",
        "editor.background": "#000000",
        "editor.selectionForeground": "#00AC00",
        "editor.foreground": "#2bff00",
        "editorLineNumber.activeForeground": "#ff0000",
        "editorLineNumber.foreground": "#ffffff",
        "descriptionForeground": "#5eff00",
        "editor.selectionHighlightBackground": "#b8b8b833",
        "terminal.background": "#000000",
        "terminal.foreground": "#47d4df",
        "textCodeBlock.background": "#ff0000",
        "editorCodeLens.foreground": "#eeff00",
        "editorUnnecessaryCode.border": "#ff0000",
        "editorUnnecessaryCode.opacity": "#10ee53dc",
        "editorGutter.commentRangeForeground": "#d0ce89",
        "editorOverviewRuler.selectionHighlightForeground": "#ff0000"
    },
    // 自动保存设置
    "files.autoSaveDelay": 1000,
    "files.autoSave": "onFocusChange",
    // "workbench.colorTheme": "One Dark NX",
    // "vsintellicode.python.completionsEnabled":true,
    "files.encoding": "utf8",
    "python.jediEnabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        ".",
        "-p",
        "*test.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.unittestEnabled": false,
    "python.testing.promptToConfigure": false,
    // 自动保存设置
    // "files.autoSaveDelay": 1000,
